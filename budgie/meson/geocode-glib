mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS \
    -Denable-introspection=true \
    -Dsoup2=false \
    -Denable-installed-tests=false \
    -Denable-gtk-doc=false \
    -Denable-installed-tests=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
