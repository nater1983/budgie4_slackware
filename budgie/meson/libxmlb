mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS \
    -Dintrospection=true \
    -Dtests=false \
    -Dgtkdoc=false \
    -Dstemmer=false \
    -Dcli=true
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
