mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS \
    -Dhostname-style=slackware \
    -Dlocale-style=slackware \
    -Dtime-style=slackware \
    -Dopenrc=disabled
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
