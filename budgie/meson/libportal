mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS \
    -Ddocs=false \
    -Dbackend-gtk3=enabled \
    -Dbackend-gtk4=enabled \
    -Dbackend-qt5=enabled \
    -Dbackend-qt6=enabled
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
