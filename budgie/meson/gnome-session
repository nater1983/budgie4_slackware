sed 's@/bin/sh@/bin/sh -l@' -i gnome-session/gnome-session.in
mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS \
    -Ddocbook=false \
    -Dlogind_provider=elogind
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
