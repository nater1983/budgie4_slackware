mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS \
    -Dqt=false \
    -Dvapi=true \
    -Dcompose=true \
    -Dapidocs=false \
    -Dsystemd=false \
    -Dinstall-docs=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
