mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS
    -Dsd-bus-provider=libelogind \
    -Ddocumentation=api \
    -Dliboeffis=auto \
    -Dtests=disabled
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
