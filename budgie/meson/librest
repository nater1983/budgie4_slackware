mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS \
    -Dca_certificates=true \
    -Dca_certificates_path=/etc/ssl/certs \
    -Dvapi=true \
    -Dtests=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
