mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${BUDGIE_BUILD_ARGS[@]}" \
    $BUDGIE_OPT_ARGS \
    -Dvapi=true \
    -Ddocs=false \
    -Dexamples=false \
    -Dintrospection=enabled \
    -Dsysprof=true \
    -Dtests=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
